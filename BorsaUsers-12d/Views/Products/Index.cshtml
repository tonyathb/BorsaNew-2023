@model IEnumerable<BorsaUsers_12d.Data.Product>

@{
    ViewData["Title"] = "Index";
}
@section Styles{
    table {
        color:white;
    }
}
<h1>ДАННИ ЗА ПРОДУКТ</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="color:white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeProducts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeProducts.Name)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImageURL)" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    &nbsp;
                    <form method="post" asp-controller="Orders" asp-action="CreateWithProductId" asp-route-productId="@item.Id">
                        <input name="countP" id="ccount" type="number" width="3" value="1" style="color:red; font:bold" /> Броя
                        <input type="submit" value="Order" />
                        @* <script>
                    var counter =document.getElementById("ccount").value;
                    @ViewData["counter"]= document.getElementById("ccount").value;
                    alert(counter);
                    </script>*@
                        <a asp-controller="Orders" asp-action="CreateWithProductId" asp-route-productId="@item.Id" asp-route-countP=ViewBag.counter>К У П И</a>
                        &nbsp;
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
